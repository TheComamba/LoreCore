    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug library tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=loregui"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'loregui'",
            "cargo": {
                "args": [
                    "run",
                    "--bin=loregui",
                    "--package=loregui"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable-tests",
            "cargo": {
                "args": [
                    "test",
                    "--bin=loregui",
                    "--package=loregui"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}